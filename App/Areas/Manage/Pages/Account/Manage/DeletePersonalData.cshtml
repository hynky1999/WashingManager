@page
@using App.Data.ServiceInterfaces
@using App.Areas.Manage.Pages.Account.Manage
@model App.Areas.Manage.Pages.Account.Manage.DeletePersonalDataModel
@inject ILocalizationService Loc
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@Loc[ViewData["Title"]]</h3>

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-warning" role="alert">
            <p>
                <strong>@Loc["Deleting this data will permanently remove your account, and this cannot be recovered."]</strong>
            </p>
        </div>

        <div>
            <form class="d-flex flex-column gap-2" id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.RequirePassword) {
                    <div class="form-floating">
                        <input aria-required="true" asp-for="Input.Password" autocomplete="current-password" class="form-control"/>
                        <label asp-for="Input.Password" class="form-label">
                            @Loc["Password"]
                        </label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
                <button class="btn btn-danger btn-lg w-100" type="submit">@Loc["Delete Data And Close My Account"]</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}