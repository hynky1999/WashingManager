@page
@using App.Data.ServiceInterfaces
@model App.Areas.SignIn.Pages.Login.LoginModel
@inject ILocalizationService Loc

@{
    ViewData["Title"] = "Log In";
}

<div class="col-md-6 mx-auto">
    <h1>@Loc[ViewData["Title"]]</h1>
    <div class="row">
        <section>
            <form id="account" method="post">
                <h2>@Loc["Use a local account to log in"]</h2>
                <hr/>
                <div class="d-flex flex-column gap-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input aria-required="true" asp-for="Input.UserName" autocomplete="username" class="form-control"/>
                        <label asp-for="Input.UserName" class="form-label">
                            @Loc["Username"]
                        </label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input aria-required="true" asp-for="Input.Password" autocomplete="current-password" class="form-control"/>
                        <label asp-for="Input.Password" class="form-label">
                            @Loc["Password"]
                        </label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input asp-for="Input.RememberMe" class="form-check-input"/>
                                @($"{@Loc["Remember me"]}?")
                            </label>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-lg btn-primary w-100" id="login-submit" type="submit">@Loc["Log In"]</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>