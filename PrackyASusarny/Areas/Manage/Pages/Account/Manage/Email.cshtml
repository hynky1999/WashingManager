@page
@using PrackyASusarny.Data.ServiceInterfaces
@using PrackyASusarny.Areas.Manage.Pages.Account.Manage
@model PrackyASusarny.Areas.Manage.Pages.Account.Manage.EmailModel
@inject ILocalizationService Loc
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@Loc[ViewData["Title"]]</h3>
<partial for="StatusMessage" name="_StatusMessage"/>
<div class="row">
    <div class="col-md-6">
        <form class="d-flex flex-column gap-2" id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating input-group">
                <input asp-for="Email" class="form-control" disabled/>
                <div class="input-group-append">
                    <span class="font-weight-bold h-100 input-group-text text-success">✓</span>
                </div>
                <label asp-for="Email" class="form-label">
                    @Loc["Email"]
                </label>
            </div>
            <div class="form-floating">
                <input aria-required="true" asp-for="Input.NewEmail" autocomplete="email" class="form-control"/>
                <label asp-for="Input.NewEmail" class="form-label">
                    @Loc["New Email"]
                </label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button asp-page-handler="ChangeEmail" class="btn btn-lg btn-primary w-100" id="change-email-button" type="submit">@Loc["Change Email"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}