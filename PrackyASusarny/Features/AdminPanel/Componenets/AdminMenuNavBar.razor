@inject ILocalizationService Loc

<Menu Mode="MenuMode.Horizontal">
    @foreach (var option in _menuOptions) {
        <MenuItem Key="@option" Title=@Loc[option] RouterLink="@($"/AdminMenu/{option}/List")">
            <Icon Type="edit" Theme="outline"></Icon>
            @option
        </MenuItem>
    }
</Menu>

@code {

    private string[] _menuOptions = AdminConfig.AllowedTypes.Select(
        t => t.Name
        ).ToArray();

}