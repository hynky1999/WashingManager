@using Microsoft.AspNetCore.Identity
@using PrackyASusarny.Auth.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User)) {
    <li class="nav-item">
        <button class="nav-link btn btn-link">
            <a class="text-dark" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </button>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Login/Logout" asp-route-returnUrl="@Context.Request.Path">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
} else {
    <li class="nav-item">
        <button class="nav-link btn btn-link">
            <a class="text-dark" id="login" asp-area="Identity" asp-page="/Account/Login/Login">Login</a>
        </button>
    </li>
}