@using Microsoft.AspNetCore.Identity
@using PrackyASusarny.Auth.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User)) {
    <li class="nav-item">
        <button class="btn btn-link nav-link">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="text-dark" id="manage" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </button>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Login/Logout" asp-route-returnUrl="@Context.Request.Path" class="form-inline" id="logoutForm">
            <button class="btn btn-link nav-link text-dark" id="logout" type="submit">Logout</button>
        </form>
    </li>
} else {
    <li class="nav-item">
        <button class="btn btn-link nav-link">
            <a asp-area="Identity" asp-page="/Account/Login/Login" class="text-dark" id="login">Login</a>
        </button>
    </li>
}